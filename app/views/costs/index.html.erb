<p id="notice"><%= notice %></p>

<h1>Costs</h1>

<table>
  <thead>
    <tr>
      <th>No</th>
      <th>Payee</th>
      <th>Income</th>
      <th>Abstract</th>
      <th>Invoice date</th>
      <th>Tax rate</th>
      <th>Invoice amount</th>
      <th>Cost date</th>
      <th>Cost amount</th>
      <th>Explain</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @costs.each do |cost| %>
      <tr>
        <td><%= cost.no %></td>
        <td><%= cost.payee %></td>
        <td><%= cost.income %></td>
        <td><%= cost.abstract %></td>
        <td><%= cost.invoice_date %></td>
        <td><%= cost.tax_rate %></td>
        <td><%= cost.invoice_amount %></td>
        <td><%= cost.cost_date %></td>
        <td><%= cost.cost_amount %></td>
        <td><%= cost.explain %></td>
        <td><%= link_to 'Show', cost %></td>
        <td><%= link_to 'Edit', edit_cost_path(cost) %></td>
        <td><%= link_to 'Destroy', cost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

