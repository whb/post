<h1><%= t("Log in") %></h1>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag t(".username") %>
    <%= text_field_tag :username, params[:username] %>
  </div>
  <div class="field">
    <%= label_tag t(".password") %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag t("Log in") %></div>
<% end %>