<h1><%= t("Log in") %></h1>

<%= form_tag(sessions_path, {:class => 'form-horizontal'}) do %>
  <div class="form-group">
    <%= label_tag 'username', t(".username"), class: 'col-sm-2 control-label' %>
    <div class="col-sm-5">
    	<%= text_field_tag :username, params[:username], class: 'form-control'%>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag 'password', t(".password"), class: 'col-sm-2 control-label' %>
    <div class="col-sm-5">
    	<%= password_field_tag :password, nil, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-5">
     <button type="submit" class="btn btn-default"><%= t("Log in") %></button>
    </div>
  </div>
<% end %>
