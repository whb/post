<%= form_for @user, :html => { :class => "form-horizontal user" } do |f| %>

  <% if @user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :username, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :username, :class => 'form-control' %>
    </div>
    <%=f.error_span(:username) %>
  </div>
  <div class="form-group">
    <%= f.label :displayname, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :displayname, :class => 'form-control' %>
    </div>
    <%=f.error_span(:displayname) %>
  </div>
  <div class="form-group">
    <%= f.label :password_digest, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :password_digest, :class => 'form-control' %>
    </div>
    <%=f.error_span(:password_digest) %>
  </div>
  <div class="form-group">
    <%= f.label :enabled, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :enabled, :class => 'form-control' %>
    </div>
    <%=f.error_span(:enabled) %>
  </div>
  <div class="form-group">
    <%= f.label :organization_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :organization_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:organization_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
