<%- model_class = Income -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @income.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payer) %>:</strong></dt>
  <dd><%= @income.payer.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:abstract) %>:</strong></dt>
  <dd><%= @income.abstract %></dd>

  <dt><strong><%= model_class.human_attribute_name(:bill_date) %>:</strong></dt>
  <dd><%= @income.bill_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:account_date) %>:</strong></dt>
  <dd><%= @income.account_date %></dd>

  <dt><strong><%= model_class.human_attribute_name(:income_amount) %>:</strong></dt>
  <dd>￥<%= @income.income_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:settlement_amount) %>:</strong></dt>
  <dd>￥<%= @income.settlement_amount %></dd>

  <dt><strong><%= model_class.human_attribute_name(:invoice_date) %>:</strong></dt>
  <dd><%= @income.invoice_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:invoice_num) %>:</strong></dt>
  <dd><%= @income.invoice_num %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tax_rate) %>:</strong></dt>
  <dd><%= @income.tax_rate %></dd>

  <dt><strong><%= model_class.human_attribute_name(:explain) %>:</strong></dt>
  <dd><%= @income.explain %></dd>
  <dt><strong><%= model_class.human_attribute_name(:discount_rate) %>:</strong></dt>
  <dd><%= @income.discount_rate %>%</dd>
  <dt><strong><%= model_class.human_attribute_name(:available_amount) %>:</strong></dt>
  <dd>￥<%= @income.available_amount %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              incomes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_income_path(@income), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              income_path(@income),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
